{
  "extends": "@tsconfig/node14/tsconfig.json",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": false,
    "types": ["node", "mocha", "chai", "chai-as-promised", "sinon-chai"],
    "outDir": "build"
  },
  "include": ["lib"]
}
